      <action>"copy"</action>
      <where>"$DEFAULT_ROOT/images"</where>
      <data>"online.gif"</data>
    </operation>
  </file>
  <file>
    <name>"$CURRENT_FOLDER/toCopy/staff.php"</name>
    <operation>
      <action>"copy"</action>
      <where>"$DEFAULT_ROOT"</where>
      <data>"staff.php"</data>
    </operation>
  </file>
  <file>
    <name>"$CURRENT_FOLDER/toCopy/lang_staff.php"</name>
